<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StraightScorer.Maui.Pages"
             xmlns:vm="clr-namespace:StraightScorer.Maui.ViewModels"
             xmlns:models="clr-namespace:StraightScorer.Core.Models;assembly=StraightScorer.Core"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:cntrl="clr-namespace:StraightScorer.Maui.Views.Controls"
             xmlns:conv="clr-namespace:StraightScorer.Maui.Converters"
             x:Class="StraightScorer.Maui.Pages.SetupPage"
             x:DataType="vm:SetupViewModel">
    <ContentPage.Resources>
        <conv:IsValidationCollectionEmptyConverter x:Key="ValidationConverter"/>
    </ContentPage.Resources>

    <Grid
        RowDefinitions="Auto,*,Auto"
        RowSpacing="32"
        Padding="16,24,16,24">

        <cntrl:LabeledNumericEntry
            Grid.Row="0"
            LabelText="Set Target Score"
            Text="{Binding TargetScore}"
            IsValid="{Binding IsTargetScoreValid}"/>

        <Grid
            Grid.Row="1"
            RowDefinitions="Auto,*"
            RowSpacing="8">
            <Label
                Grid.Row="0"
                Margin="4,0"
                Text="Setup Players"/>
            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding PlayerSetups}"
                SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Vertical"
                        ItemSpacing="8"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PlayerSetupDto">
                        <Border
                            Grid.Row="1"
                            Style="{StaticResource CardBorderStyle}">
                            <Grid
                                RowDefinitions="*,*"
                                ColumnDefinitions="*,*"
                                RowSpacing="8"
                                ColumnSpacing="16">
                                <cntrl:LabeledTextEntry
                                    Grid.Row="0" Grid.ColumnSpan="2"
                                    LabelText="Player Name"
                                    Text="{Binding Name}"
                                    IsValid="{Binding IsNameValid}"/>
                                <cntrl:LabeledNumericEntry
                                    Grid.Row="1" Grid.Column="0"
                                    LabelText="Head Start"
                                    Text="{Binding HeadStart}"
                                    IsValid="{Binding IsHeadStartValid}"/>
                                <Grid
                                    Grid.Row="1" Grid.Column="1"
                                    ColumnDefinitions="*,*"
                                    VerticalOptions="End"
                                    Padding="0,0,0,4">
                                    <Label
                                        Grid.Column="0"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center"
                                        FontSize="18"
                                        Text="Is Starting"/>
                                    <Switch
                                        Grid.Column="1"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        IsToggled="{Binding IsStarting}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <Button
            Grid.Row="2"
            VerticalOptions="End"
            HorizontalOptions="Fill"
            Text="Start Match"
            Command="{Binding StartGameCommand}"/>
    </Grid>
</ContentPage>