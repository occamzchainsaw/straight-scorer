<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
                  xmlns:vm="clr-namespace:StraightScorer.Maui.ViewModels"
                  x:Class="StraightScorer.Maui.Views.AddPointsPopup"
                  x:DataType="vm:GameViewModel"
                  CloseWhenBackgroundIsClicked="True"
                  BackgroundColor="#80000000">
    <material:MaterialCard
        VerticalOptions="Center"
        Margin="16"
        Padding="16">
        <VerticalStackLayout Spacing="16">
            <material:MaterialLabel
                Type="TitleMedium"
                Text="How many points to add?"/>
            <material:MaterialTextField
                Type="Outlined"
                Label="Name"
                Keyboard="Numeric"
                AlwaysShowLabel="True"
                Placeholder="Player Name"
                Text="{Binding PointsToAdd}"
                MaxLength="3"
                ReturnCommand="{Binding AddPointsCommand}"
                ReturnCommandParameter="{Binding PointsToAdd}"
                HasError="{Binding PointsInputError}"
                ErrorAnimationType="Shake"/>
            <material:MaterialButton
                Margin="0,16,0,0"
                VerticalOptions="End"
                HorizontalOptions="End"
                Text="Add Points"
                Command="{Binding AddPointsCommand}"
                CommandParameter="{Binding PointsToAdd}"/>
        </VerticalStackLayout>
    </material:MaterialCard>
</mopups:PopupPage>