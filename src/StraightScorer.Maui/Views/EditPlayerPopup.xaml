<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Class="StraightScorer.Maui.Views.EditPlayerPopup"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
                  xmlns:vm="clr-namespace:StraightScorer.Maui.ViewModels"
                  x:DataType="vm:GameSetupViewModel"
                  CloseWhenBackgroundIsClicked="True"
                  BackgroundClickedCommand="{Binding CancelPlayerEditCommand}"
                  BackgroundColor="#80000000">
    <material:MaterialCard
        VerticalOptions="Center"
        Margin="16"
        Padding="16">
        <VerticalStackLayout Spacing="16">
            <material:MaterialLabel
                Type="TitleMedium"
                Text="Edit Player"/>
            <material:MaterialTextField
                Type="Outlined"
                Label="Name"
                AlwaysShowLabel="True"
                Placeholder="Player Name"
                Text="{Binding EditingPlayer.Name}"
                MaxLength="25"
                Focused="TextFieldFocused"/>
            <material:MaterialTextField
                Type="Outlined"
                Keyboard="Numeric"
                Label="Head Start"
                AlwaysShowLabel="True"
                Placeholder="0"
                MaxLength="3"
                SupportingText="The player will start the match with this number of points"
                Text="{Binding EditingPlayer.HeadStart}"
                Focused="TextFieldFocused"
                HasError="{Binding EditHeadStartInputError}"
                ReturnCommand="{Binding ValidateHeadStartCommand}"/>
            <material:MaterialSwitch
                Margin="8,0,8,0"
                Text="Starts the match"
                TextSide="Left"
                IsToggled="{Binding EditingPlayer.IsStarting}"/>
            <material:MaterialButton
                Margin="0,16,0,0"
                VerticalOptions="End"
                HorizontalOptions="End"
                Text="Save"
                Command="{Binding SavePlayerEditsCommand}"/>
        </VerticalStackLayout>
    </material:MaterialCard>
</mopups:PopupPage>