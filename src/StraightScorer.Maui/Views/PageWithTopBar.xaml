<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StraightScorer.Maui.ViewModels"
             xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
             x:Class="StraightScorer.Maui.Views.PageWithTopBar"
             x:DataType="vm:BaseViewModel">
    <Grid
        RowDefinitions="Auto,*"
        RowSpacing="16">
        <material:MaterialTopAppBar
            x:Name="topAppBar"
            Headline="{Binding Title}"
            Description="{Binding Subtitle}"
            Type="Large"/>
        <Grid
            Grid.Row="1"
            Margin="16,0,16,16">
            <ContentView x:Name="contentPresenter"/>
        </Grid>
    </Grid>
</ContentView>
